AppContainer:

<AppContainer>:
    id: app_container
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScreenManager:
        id: projectManager
        HomeScreen:

    MapUi:
        id: map
        map_size: dp(300)
        size_hint: None, None
        pos_hint: {'right': 1, 'bottom': 1}

    LoadingSpinner:
        id: loadingSpinner

<HomeScreen@Screen>:
    name: 'home_screen'
    BoxLayout:
        orientation: 'vertical'
        Filler:
        BaseButton:
            pos_hint: {'center_x': .5}
            text: 'MD Icons Viewer'
            on_release: app.nav_to_project('MdIconsViewerScreen')
        Filler:
        BaseButton:
            pos_hint: {'center_x': .5}
            text: 'Time Calculator'
            on_release: app.nav_to_project('TimeCalculatorScreen')
        Filler:
        BaseButton:
            pos_hint: {'center_x': .5}
            text: 'Unit Converter'
            on_release: app.nav_to_project('UnitConverterScreen')
        Filler:
        BaseButton:
            pos_hint: {'center_x': .5}
            text: 'Countries'
            on_release: app.nav_to_project('CountriesMainScreen')
        Filler: