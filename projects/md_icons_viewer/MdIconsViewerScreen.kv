<MdIconsViewerScreen>:
    name: 'MdIconsViewerScreen'

    BoxLayout:
        orientation: 'vertical'
        TopBar:
            id: top_bar
            project_name: 'Material Design Icons'

        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 20
            canvas.before:
                Color:
                    rgba: app.rgb_formatter([250, 235, 215, 255])
                Rectangle:
                    pos: self.pos
                    size: self.size
            SegmentedController:
                id: segmented_controller
                toggle_func: lambda i, v: root.set_filter_selection(i, v)
                button_labels: ['All', 'Filled', 'Outlined']
                seg_group: 'md-icon-types'
            SearchInputBox:
                id: search_box
                search_func: lambda i, v: root.filter_data(i, v)
                search_hint_text: 'Search for icons'
                counter: len(root.data)
            ResponsiveGridView:
                id: responsive_grid
                view_class: 'IconCard'
                item_width: dp(200)
                item_spacing: dp(10)

<IconCard>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
    size: root.size

    BaseLabel:
        id: icon_label
        font_name: 'md-icon'
        font_size: sp(52)
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        halign: 'center'
        valign: 'middle'

    BaseLabel:
        id: icon_name
        text: root.icon_name
        font_size: sp(12)
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        halign: 'center'
        valign: 'middle'