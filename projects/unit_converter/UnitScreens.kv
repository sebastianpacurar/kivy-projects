# this is the actual converter ui, displayed on every unit screen, but with different parameters for unit_types
<Converter>:
    cols: 2
    size_hint: 1, None
    pos_hint: {'top': 1}
    height: dp(300)
    spacing: 10
    padding: 10

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        LabeledNumericInput:
            id: from_input_field
            label_txt: 'From'
            container_width: 150
            allow_float: True
            update_text_field_func: root.update_text_field_func
        AutoSuggestionInputBox:
            id: from_selection
            options: root.drop_options
            selected_option: root.source_selected_option

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        LabeledNumericInput:
            id: target_input_field
            label_txt: 'To'
            container_width: 350
            is_readonly: True
            allow_float: True
            is_validate_digits: False
        AutoSuggestionInputBox:
            id: target_selection
            options:root.drop_options
            selected_option: root.target_selected_option
