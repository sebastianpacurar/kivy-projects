<UnitConverterScreen>:
    name: 'UnitConverterScreen'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: 250/255, 235/255, 215/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TopBar:
            project_name: 'Unit Converter'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 10

                LabeledNumericInput:
                    id: from_input_field
                    label_txt: 'From'
                    container_width: 150
                    allow_float: True
                    update_text_field_func: lambda instance, value: root.update_target_input() # call custom method (update target_input_field.text)

                AutoSuggestionInputBox:
                    id: from_selection
                    options: root.set_options()
                    selected_option: 'meter [m]' # initial value

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 10

                LabeledNumericInput:
                    id: target_input_field
                    label_txt: 'To'
                    container_width: 350
                    is_readonly: True   # prevent user from interacting with input
                    allow_float: True
                    is_validate_digits: False   # prevent digit validation, for exponential notation

                AutoSuggestionInputBox:
                    id: target_selection
                    options: root.set_options()
                    selected_option: 'yard [yd]' # initial value
            Filler:
        Filler: