#: include projects/unit_converter/UnitScreens.kv

<UnitConverterScreen>:
    name: 'UnitConverterScreen'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: 250/255, 235/255, 215/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TopBar:
            project_name: 'Unit Converter'

        GridLayout:
            cols: 6
            size_hint_y: None
            height: dp(25)  # Fixed height for buttons
            spacing: 10

            SegmentedButton:
                text: 'Length'
                group: 'unit_converters'
                on_state: root.change_unit_screen(self, self.state, 'LengthScreen')
                state: 'down'
            SegmentedButton:
                text: 'Area'
                group: 'unit_converters'
                on_state: root.change_unit_screen(self, self.state, 'AreaScreen')
            SegmentedButton:
                text: 'Volume'
                group: 'unit_converters'
                on_state: root.change_unit_screen(self, self.state, 'VolumeScreen')
            SegmentedButton:
                text: 'Energy'
                group: 'unit_converters'
                on_state: root.change_unit_screen(self, self.state, 'EnergyScreen')
            SegmentedButton:
                text: 'Force'
                group: 'unit_converters'
                on_state: root.change_unit_screen(self, self.state, 'ForceScreen')
            SegmentedButton:
                text: 'Speed'
                group: 'unit_converters'
                on_state: root.change_unit_screen(self, self.state, 'SpeedScreen')

        BoxLayout:
            orientation: 'vertical'
            ScreenManager:
                id: screen_manager
                LengthScreen:
                AreaScreen:
                VolumeScreen:
                EnergyScreen:
                ForceScreen:
                SpeedScreen:

