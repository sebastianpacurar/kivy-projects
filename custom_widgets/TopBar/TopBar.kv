<TopBar>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(30)
    padding: [dp(10), 0, dp(10), 0]
    spacing: dp(7.5)
    canvas.before:
        Color:
            rgba: app.rgb_formatter([80, 200, 120, 255], lighten=True, factor=0.6)
        Rectangle:
            pos: self.pos
            size: self.size

    # left button container
    BoxLayout:
        id: button_container_left
        orientation: 'horizontal'
        size_hint: None, 1
        width: self.minimum_width
        spacing: dp(5)

    # top bar title
    TextLabel:
        text: root.project_name
        font_size: sp(20)
        size_hint: 1, 1
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        disabled_color: self.color

    # right button container
    BoxLayout:
        id: button_container_right
        orientation: 'horizontal'
        size_hint: None, 1
        width: self.minimum_width
        spacing: dp(5)

    # vertical separator
    BaseLabel:
        height: self.parent.height + dp(10)
        width: dp(5)
        bg_color: app.rgb_formatter([2, 153, 139, 255], factor=0.45, lighten=True)

    # home button (present on all screens)
    IconButton:
        id: home_button
        pos_hint: {'center_y': .5}
        on_release: app.nav_to_home()
        icon: app.get_icon('home')