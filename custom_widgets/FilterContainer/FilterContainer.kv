<FilterContainer>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: self.minimum_height
    spacing: dp(5)

<FilterBox>:
    size_hint_x: None
    enhanced: True


<ResetFilters>:
    size_hint_x: 1
    height: root.text_field.height

    IconButton:
        id: reset_button
        bg_size_val: dp(22)
        x: root.text_field.width - self.width - dp(2)
        y: root.text_field.height - self.bg_size_val * 0.825
        icon: app.get_icon('filter-off')
        disabled: root.text_field.text == root.default_option
        on_release: root.reset_to_default()
