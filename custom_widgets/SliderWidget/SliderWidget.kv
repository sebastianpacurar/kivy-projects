<SliderWidget>:
    size_hint_y: None
    height: root.slider_height
    BaseLabel:
        text: root.label_text
        size_hint_x: .1
        height: root.slider_height
    Slider:
        id: slider_w
        height: root.slider_height
        min: root.min_max[0]
        max: root.min_max[1]
        value: root.default_value
        step: 1
        value_track: True
        value_track_width: dp(5)
        value_track_color: root.track_color
        cursor_size: sp(18), sp(18)
    BaseLabel:
        text: f'({int(slider_w.value)})' if root.is_int else f'({slider_w.value})'
        size_hint_x: .1
        height: root.slider_height