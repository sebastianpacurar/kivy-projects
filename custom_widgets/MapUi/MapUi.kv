<MapUi>:
    map_view: map_view
    canvas.before:
        # draw the border here
        Color:
            rgba: 0, 0, 0, 1  # black color for the border
        Line:
            width: 2  # border thickness
            rectangle: (self.x, self.y, self.width, self.height)
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}

        MapUiView:
            id: map_view
            zoom: 5

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: reset_loc_btn.height

            canvas.before:
                Color:
                    rgba: .8, .8, .8, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            SimpleButton:
                id: reset_loc_btn
                size_hint: 1, 1
                wrap_width_val: self.parent.width - resize_btn.bg_size_val
                label_text: root.target_name
                roundness: [0, 0, 0, 0]
                disabled: root.target_name == ' '
                on_release: root.smooth_center_map(*root.lat_long)

            IconButton:
                id: resize_btn
                size_hint_y: 1
                pos_hint: {'center_y': .5}
                icon: app.get_icon('window-minimize') if root.is_fullscreen else app.get_icon('window-maximize')
                roundness: [0, 0, 0, 0]
                primary_state_color: app.rgb_formatter([2, 153, 139, 255], factor=0.35, darken=True)
                on_release: root.toggle_full_screen()


<MarkerPopupLabel>:
    text: root.label_text
    pos_hint: {'center_x': .5, 'center_y': .2}
    color: 0, 0, 0, 1
    size: self.texture_size[0] + dp(15), self.texture_size[1] + dp(5)
    canvas.before:
        Color:
            rgba: .9, .9, .9, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 1.5
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10)


