<SearchInputBox>:
    orientation: 'horizontal'
    size_hint: .8, None
    height: self.minimum_height
    pos_hint: {'center_x': .5}
    spacing: dp(5)

    BaseTextInput:
        id: search_input
        size_hint: 1, None
        pos_hint: {'center_y': .5}
        hint_text: root.search_hint_text
        on_focus: root.bind_escape_key(self.focus)

    IconButton:
        bg_size_val: dp(28)
        disabled: len(search_input.text) == 0
        icon: app.get_icon('close-circle-outline')
        on_release: root.clear_text()

    BaseLabel:
        text: f'({str(root.counter)})'
        width: dp(100)
        height: root.height
        font_size: sp(20)
        pos_hint: {'center_y': .5}
        canvas.before:
            Color:
                rgba: [.8, .8, .8, 1]
            RoundedRectangle:
                pos: self.pos
                size: self.size
