<NumericInputBox>:
    orientation: 'vertical'
    size_hint: None, None
    width: root.container_width
    spacing: dp(5)
    height: box_label.texture_size[1] + text_input.height + dp(5)

    TextLabel:
        id: box_label
        text: root.label_text
        font_size: sp(15)
        font_name: 'roboto-bold'

    BaseTextInput:
        id: text_input
        readonly: root.is_readonly
        disabled: root.is_readonly
        on_focus: self.text = "0" if not self.focus and len(self.text) == 0 else self.text