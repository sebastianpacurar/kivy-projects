<IconButton>:
    orientation: 'horizontal'
    size_hint: None, None
    height: root.bg_size_val
    padding: dp(8), 0, dp(8), 0

    TextLabel:
        id: text_label
        font_size: sp(14)
        height: self.texture_size[1]
        text: root.label_text
        pos_hint: {'center_y': .5}
        disabled_color: 1, 1, 1, 1
        color: 1, 1, 1, 1

    Filler:
        id: space_filler

    BaseLabel:
        id: icon_label
        size_hint: 1, 1
        pos_hint: {'center_y': .5}
        font_name: 'md-icon'
        font_size: root.icon_font_size_sp
        disabled_color: 1, 1, 1, 1
        color: 1, 1, 1, 1
