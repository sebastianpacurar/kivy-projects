<ColorPickerWidget>:
    orientation: 'vertical'
    size_hint: 1, None
    height: self.minimum_height

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        height: self.minimum_height

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height

            ColorTable:
                id: color_table

            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: red_slider.height
                    BaseLabel:
                        text: 'R'
                        size_hint_x: .1
                        height: red_slider.height
                    Slider:
                        id: red_slider
                        min: 0
                        max: 255
                        value: 0
                        step: 1
                        value_track: True
                        value_track_color: app.rgb_formatter([255, 0, 0, 255], darken=True, factor=0.1)
                        on_value: root.on_slider_value_change('red', self.value)
                    BaseLabel:
                        text: f'({root.red})'
                        size_hint_x: .1
                        height: red_slider.height

                BoxLayout:
                    BaseLabel:
                        text: 'G'
                        size_hint_x: .1
                        height: green_slider.height
                    Slider:
                        id: green_slider
                        min: 0
                        max: 255
                        value: 0
                        step: 1
                        value_track: True
                        value_track_color: app.rgb_formatter([0, 255, 0, 255], darken=True, factor=0.1)
                        on_value: root.on_slider_value_change('green', self.value)
                    BaseLabel:
                        text: f'({root.green})'
                        size_hint_x: .1
                        height: green_slider.height

                BoxLayout:
                    BaseLabel:
                        text: 'B'
                        size_hint_x: .1
                        height: blue_slider.height
                    Slider:
                        id: blue_slider
                        min: 0
                        max: 255
                        value: 0
                        step: 1
                        value_track: True
                        value_track_color: app.rgb_formatter([0, 0, 255, 255], darken=True, factor=0.1)
                        on_value: root.on_slider_value_change('blue', self.value)
                    BaseLabel:
                        text: f'({root.blue})'
                        size_hint_x: .1
                        height: blue_slider.height

                FloatLayout:
                    id: color_display
                    size_hint: .7, .5
                    pos_hint: {'center_x': .5}
                    canvas.before:
                        Color:
                            rgba: app.rgb_formatter([root.red, root.green, root.blue, 255])
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: app.rgb_formatter([2, 153, 139, 255], factor=0.45, darken=True)
                        Line:
                            width: dp(1.5)
                            rectangle: (self.x, self.y, self.width, self.height)

                    TextLabel:
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        text: f' RGB ({root.red}, {root.green}, {root.blue}) '
                        bg_color: [1, 1, 1, 1]


<ColorTable>:
    size_hint_y: None
    orientation: 'horizontal'
    spacing: -dp(15)
