<ColorPickerWidget>:
    orientation: 'vertical'
    size_hint: 1, None
    height: self.minimum_height

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        height: self.minimum_height

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height

            ColorTable:
                id: color_table

            FloatLayout:
                id: color_display
                size_hint: .7, 1
                pos_hint: {'center_x': .5}
                canvas.before:
                    Color:
                        rgba: app.rgb_formatter([root.red, root.green, root.blue, 255])
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: app.rgb_formatter([2, 153, 139, 255], factor=0.45, darken=True)
                    Line:
                        width: dp(1.5)
                        rectangle: (self.x, self.y, self.width, self.height)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: None, None
                    width: dp(10)
                    height: rgb_text_val.height + hex_text_val.height
                    pos_hint: {'center_x': .5, 'center_y': .5}

                    canvas.before:
                        Color:
                            rgba: app.rgb_formatter([255, 255, 255, 255])
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    TextLabel:
                        id: rgb_text_val
                        text: f' RGB ({root.red}, {root.green}, {root.blue}) '
                        bg_color: [1, 1, 1, 1]
                        pos_hint: {'center_x': .5, 'center_y': .5}

                    TextLabel:
                        id: hex_text_val
                        text: f' HEX: ({root.hex_val}) '
                        bg_color: [1, 1, 1, 1]
                        pos_hint: {'center_x': .5, 'center_y': .5}

            BoxLayout:
                orientation: 'vertical'

                SliderWidget:
                    id: red_slider
                    label_text: 'R'
                    target_prop_attribute: 'red'
                    max_val: 255
                    current_value: root.red
                    track_color: app.rgb_formatter([255, 0, 0, 255], darken=True, factor=0.3)
                    slider_value_func: lambda i, v: root.update_color_channel(i, v)

                SliderWidget:
                    id: green_slider
                    label_text: 'G'
                    target_prop_attribute: 'green'
                    max_val: 255
                    current_value: root.green
                    track_color: app.rgb_formatter([0, 255, 0, 255], darken=True, factor=0.3)
                    slider_value_func: lambda i, v: root.update_color_channel(i, v)

                SliderWidget:
                    id: blue_slider
                    label_text: 'B'
                    target_prop_attribute: 'blue'
                    max_val: 255
                    current_value: root.blue
                    track_color: app.rgb_formatter([0, 0, 255, 255], darken=True, factor=0.3)
                    slider_value_func: lambda i, v: root.update_color_channel(i, v)

                Filler:


<ColorTable>:
    size_hint: None, None
    orientation: 'horizontal'
    spacing: -dp(10)
