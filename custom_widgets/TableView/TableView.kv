
<TableView>:
    orientation: 'vertical'

    # columns header
    BoxLayout:
        id: columns
        orientation: 'horizontal'
        size_hint: 1, None
        height: height_dummy.height
        padding: 0, dp(5), 0, dp(5)

        # used only to be referenced by parent to set height of columns
        TextLabel:
            id: height_dummy
            text: 'height_dummy'
            font_size: sp(15)
            size_hint_x: None
            width: 0

    # rows
    RecycleView:
        id: rv
        viewclass: root.view_class
        RecycleBoxLayout:
            id: box_layout
            orientation: 'vertical'
            default_size: None, 60
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<TableViewText>:
    size_hint: None, 1
    TextLabel:
        size_hint_x: 1
        font_size: sp(14)
        pos_hint: {'center_y': .5}
        text: root.text_val
        text_size: self.width - dp(20), None  # wrap text within button width (with padding)
        halign: 'center'
        valign: 'middle'


<TableViewButton>:
    size_hint: None, 1
    width: base_btn.width
    SimpleButton:
        id: base_btn
        wrap_width_val: dp(175)
        size_hint_y: .99
        pos_hint: {'center_y': .5}
        font_size: sp(14)
        label_text: root.text_val
        roundness: [0, 0, 0, 0]

<TableViewIconButton>:
    size_hint: None, 1
    width: icon_btn.width
    pos_hint: {'center_x': .5, 'center_y': .5}
    IconButton:
        id: icon_btn
        bg_size_val: dp(30)
        height: self.parent.height - dp(1)
        pos_hint: {'center_y': .5}
        icon: root.icon
        roundness: [0, 0, 0, 0]


<TableViewRow>:
    orientation: 'horizontal'
    size_hint: 1, None


<TableData>:
    size_hint: 1, 1
    canvas.before:
        Color:
            rgba: 95, .95, .95, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: dp(1.25)
