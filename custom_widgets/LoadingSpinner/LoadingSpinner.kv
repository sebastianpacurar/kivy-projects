<LoadingSpinner>:
    size_hint: None, None
    width: self.parent.width - dp(18)
    height: self.parent.height - dp(18)
    pos_hint: {'center_x': .5, 'center_y':.5}
    opacity: 0

    canvas.before:
        Color:
            rgba: 0, 0, 0, .35
        RoundedRectangle:
            size: self.size
            pos: self.pos