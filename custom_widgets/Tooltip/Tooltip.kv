<Tooltip>:
    size_hint: None, None
    size: tooltip_label.size
    pos: 0, 0
    BaseLabel:
        id: tooltip_label
        size_hint: None, None
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_size: sp(20)
        text: root.tooltip_text
        size: self.texture_size[0] + 10, self.texture_size[1] + 10
        bg_color: app.rgb_formatter([255, 255, 255, 255], factor=0.25, darken=True)

        # border
        canvas.before:
            Color:
                rgba: app.rgb_formatter([255, 255, 255, 255], factor=0.75, darken=True)
            Line:
                width: dp(1.5)
                rectangle: self.x, self.y, self.width, self.height