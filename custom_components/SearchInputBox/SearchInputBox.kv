<SearchInputBox>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: dp(40)

    RelativeLayout:
        size_hint_x: 1
        height: dp(50)

        BaseTextInput:
            id: search_input
            size_hint: 1, None
            font_size: sp(20)
            padding: dp(25), dp(15), dp(10), dp(10)
            height: dp(50)
            hint_text: root.search_hint_text

        IconButton:
            disabled: len(search_input.text) == 0
            x: self.parent.width - self.width - dp(20)
            y: self.parent.height - self.height + dp(2.5)
            icon: app.get_icon('close-circle-outline')
            disabled: len(search_input.text) == 0
            on_release: root.clear_text()

    BaseLabel:
        text: f'({str(root.counter)})'
        width: dp(100)
        height: dp(55)
        halign: 'center'
        font_size: sp(24)
