<MapUi>:
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}

        MapView:
            id: map_view
            zoom: 5

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: reset_loc_btn.height

            canvas.before:
                Color:
                    rgba: .8, .8, .8, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BaseButton:
                id: reset_loc_btn
                text: root.target_name
                size_hint: 1, None
                height: resize_btn.height
                on_release: root.smooth_scroll_to_marker()

            IconButton:
                id: resize_btn
                is_round: False
                size: reset_loc_btn.size[1], reset_loc_btn.size[1]
                icon: app.get_icon('window-minimize') if root.is_fullscreen else app.get_icon('window-maximize')
                on_release: root.toggle_full_screen()
