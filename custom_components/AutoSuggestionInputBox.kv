<AutoSuggestionInputBox>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height

    TextInput:
        id: input_field
        multiline: False
        size_hint_y: None
        height: 40
        write_tab: False
        on_text: root.filter_options(self.text) # filter based on splitted option
        on_focus: root.show_options(self.focus) # add/clear dropdown option buttons

    ScrollView:
        id: dropdown
        size_hint_y: None
        height: 200
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            id: options_layout
            cols: 1
            size_hint_y: None
            height: self.minimum_height


<AutoSuggestionInputOption>:
    size_hint_y: None
    height: 40
    background_normal: ''
    background_color: 0.05, 0.3, 0.5, 1
    color: 1, 1, 1, 1
    font_size: sp(15)

    #apply border
    canvas.before:
        Color:
            rgba: 0.07, 0.4, 0.7, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height